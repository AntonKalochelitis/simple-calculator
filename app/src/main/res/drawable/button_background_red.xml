<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Effect for pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0"/> <!-- Change color as needed -->
            <corners android:radius="8dp"/> <!-- Radius for rounded corners -->
        </shape>
    </item>
    <!-- Effect for focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#D0D0D0"/> <!-- Change color as needed -->
            <corners android:radius="8dp"/> <!-- Radius for rounded corners -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF5E5E"/> <!-- Default color -->
            <corners android:radius="8dp"/> <!-- Radius for rounded corners -->
        </shape>
    </item>
</selector>